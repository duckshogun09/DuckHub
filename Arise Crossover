-- Gui Library (Rayfield UI)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Arise Crossover | Hub",
    LoadingTitle = "Arise Crossover | Hub",
    LoadingSubtitle = "by b·∫°n üòé",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "AriseCrossoverConfig",
        FileName = "AriseHub"
    },
    Discord = {
        Enabled = false,
    },
    KeySystem = false
})

local AutoFarm = false
local SelectedMob = "Soondo" -- M·∫∑c ƒë·ªãnh ban ƒë·∫ßu l√† Soondo

-- Tab Farm
local FarmTab = Window:CreateTab("Farm", 4483345998)

-- Dropdown ch·ªçn mob
FarmTab:CreateDropdown({
    Name = "Ch·ªçn Mob",
    Options = {"Soondo", "Mob1", "Mob2", "Mob3"}, -- ‚úÖ: Th√™m t√™n mob kh√°c n·∫øu mu·ªën
    CurrentOption = "Soondo",
    Callback = function(Option)
        SelectedMob = Option
        Rayfield:Notify({
            Title = "ƒê√£ ch·ªçn Mob",
            Content = "B·∫°n ƒë√£ ch·ªçn: " .. Option,
            Duration = 3,
        })
    end,
})

-- Toggle Auto Farm
FarmTab:CreateToggle({
    Name = "Auto Farm Mobs",
    CurrentValue = false,
    Callback = function(Value)
        AutoFarm = Value
        if AutoFarm then
            AutoFarmFunction()
        end
    end
})

-- Auto Farm Function
function AutoFarmFunction()
    task.spawn(function()
        while AutoFarm do
            pcall(function()
                local player = game.Players.LocalPlayer
                local character = player.Character
                local mobs = workspace:FindFirstChild("Mobs")

                if mobs and character and character:FindFirstChild("HumanoidRootPart") then
                    for _, mob in pairs(mobs:GetChildren()) do
                        if mob.Name == SelectedMob and mob:FindFirstChild("HumanoidRootPart") and mob:FindFirstChild("Humanoid") and mob.Humanoid.Health > 0 then
                            -- Teleport t·ªõi mob ƒë√£ ch·ªçn
                            character.HumanoidRootPart.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0, 0, 3)

                            -- T·∫•n c√¥ng mob
                            local args = {[1] = mob}
                            game:GetService("ReplicatedStorage").Remotes.Combat:FireServer(unpack(args))
                            task.wait(0.2)
                        end
                    end
                end
            end)
            task.wait(0.1)
        end
    end)
end
