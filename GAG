local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Tạo cửa sổ chính
local Window = Rayfield:CreateWindow({
	Name = "Script Menu",
	LoadingTitle = "Đang tải menu...",
	LoadingSubtitle = "by bạn",
	ConfigurationSaving = {
		Enabled = false
	},
	KeySystem = false
})

-- Tab script
local ScriptTab = Window:CreateTab("Scripts", 4483362458)

-- Danh sách script mẫu
local scripts = {
	["SpeedxHub"] = [[
		loadstring(game:HttpGet("https://pastebin.com/raw/YOUR_FLY_SCRIPT"))()
	]],
	["ESP Script"] = [[
		loadstring(game:HttpGet("https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua", true))()
	]]
}

for name, code in pairs(scripts) do
	ScriptTab:CreateButton({
		Name = name,
		Callback = function()
			loadstring(code)()
		end,
	})
end

-- Tab chỉnh stats
local PlayerTab = Window:CreateTab("Player Stats", 4483362458)

-- Tốc độ chạy (WalkSpeed)
PlayerTab:CreateSlider({
	Name = "Tốc độ chạy (WalkSpeed)",
	Range = {16, 200},
	Increment = 1,
	Default = 16,
	Callback = function(value)
		local char = game.Players.LocalPlayer.Character
		if char and char:FindFirstChild("Humanoid") then
			char.Humanoid.WalkSpeed = value
		end
	end,
})

-- Nhảy cao (JumpPower)
PlayerTab:CreateSlider({
	Name = "Nhảy cao (JumpPower)",
	Range = {50, 300},
	Increment = 1,
	Default = 50,
	Callback = function(value)
		local char = game.Players.LocalPlayer.Character
		if char and char:FindFirstChild("Humanoid") then
			char.Humanoid.JumpPower = value
		end
	end,
})
