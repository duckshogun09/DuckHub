local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Tạo cửa sổ chính
local Window = Rayfield:CreateWindow({
	Name = "Script Menu",
	LoadingTitle = "Đang tải menu...",
	LoadingSubtitle = "by bạn",
	ConfigurationSaving = {
		Enabled = false
	},
        Discord = {
            Enabled = false
        },
	KeySystem = false
})

-- Tạo tab
local ScriptTab = Window:CreateTab("Scripts", 4483362458) -- icon ID

-- Danh sách script
local scripts = {
	["Fly Script"] = [[
		loadstring(game:HttpGet("https://pastebin.com/raw/YOUR_FLY_SCRIPT"))()
	]],
	["ESP Script"] = [[
		loadstring(game:HttpGet("https://pastebin.com/raw/YOUR_ESP_SCRIPT"))()
	]],
	["Speed Hack"] = [[
		game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
	]]
}

-- Tạo nút cho từng script
for name, code in pairs(scripts) do
	ScriptTab:CreateButton({
		Name = name,
		Callback = function()
			loadstring(code)()
		end,
	})
end
