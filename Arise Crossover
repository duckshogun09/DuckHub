-- Tải UI Library
loadstring(game:HttpGet("https://raw.githubusercontent.com/daucobonhi/Ui-Redz-V2/main/UiREDzV2.lua"))()

-- Tạo cửa sổ chính
local Window = MakeWindow({
    Hub = {
        Title = "Arise Crossover Menu",
        Animation = "Youtube: TBoy Roblox"
    },
    Key = {
        KeySystem = false,
        Title = "Key System",
        Description = "",
        KeyLink = "",
        Keys = {"1234"},
        Notifi = {
            Notifications = true,
            CorrectKey = "Running the Script...",
            Incorrectkey = "The key is incorrect",
            CopyKeyLink = "Copied to Clipboard"
        }
    }
})

-- Nút thu nhỏ cửa sổ
MinimizeButton({
    Image = "http://www.roblox.com/asset/?id=83190276951914",
    Size = {60, 60},
    Color = Color3.fromRGB(10, 10, 10),
    Corner = true,
    Stroke = false,
    StrokeColor = Color3.fromRGB(255, 0, 0)
})

-- Tạo Tab "Script Farm"
local FarmTab = MakeTab({ Name = "Script Farm" })

-- Nút: Redz Hub
AddButton(FarmTab, {
    Name = "Redz Hub",
    Callback = function()
        local Settings = {
            JoinTeam = "Pirates", -- Pirates/Marines
            Translator = true -- true/false
        }

        loadstring(game:HttpGet("https://raw.githubusercontent.com/realredz/BloxFruits/main/Source.lua"))(Settings)
    end
})

-- Bạn có thể thêm nhiều nút hơn như sau:
AddButton(FarmTab, {
    Name = "Auto Farm EXP",
    Callback = function()
        -- Code auto farm exp hoặc load từ bên ngoài
        loadstring(game:HttpGet("https://pastebin.com/raw/XXXXXXX"))()
    end
})

AddButton(FarmTab, {
    Name = "Teleport Hub",
    Callback = function()
        -- Code teleport hoặc mở GUI teleport
        print("Đang mở menu Teleport")
    end
})

-- Thêm Tab phụ nếu muốn
local SettingsTab = MakeTab({ Name = "Settings" })

AddButton(SettingsTab, {
    Name = "Reset Character",
    Callback = function()
        game.Players.LocalPlayer.Character:BreakJoints()
    end
})

AddButton(SettingsTab, {
    Name = "Anti AFK",
    Callback = function()
        local vu = game:GetService("VirtualUser")
        game:GetService("Players").LocalPlayer.Idled:Connect(function()
            vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
            wait(1)
            vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        end)
        print("Anti AFK đã được kích hoạt!")
    end
})
